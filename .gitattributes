# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF line endings on checkout
*.bat           text eol=crlf
*.cmd           text eol=crlf
*.ps1           text eol=crlf

# Force these files to have LF line endings on checkout
*.sh            text eol=lf
*.py            text eol=lf
*.md            text eol=lf
*.txt           text eol=lf
*.json          text eol=lf
*.yml           text eol=lf
*.yaml          text eol=lf
.gitattributes  text eol=lf
.gitignore      text eol=lf

# Binary files should not be modified
*.png           binary
*.jpg           binary
*.jpeg          binary
*.gif           binary
*.ico           binary
*.pdf           binary
*.ttf           binary
*.woff          binary
*.woff2         binary
